@{
    ViewData["Title"] = "Signup Page";
}
@model RegisterViewModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Sign up - Addicure</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" src="~/assets/logo.png" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link rel="stylesheet" type="text/css" href="~/css/styleSignup.css" media="screen" />
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" media="screen" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<style>
    body {
        background-image: url('/assets/clinicbg.jpg');
        background-size: cover;
    }
</style>
<body id="page-top">
    <div class="container d-flex align-items-center flex-column p-5 my-5" align="center">
        <div class="bannerimg">
            <img src="~/assets/logo.png" width="120" height="120" />
        </div>
        <div class="signupform">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="Register" asp-controller="Account" method="post">
                <h1>Sign Up</h1>
                <div class="input-box">
                    <input asp-for="UserName" placeholder="Enter Username">
                    <i class='bx bx-user'></i>
                </div>
                <div class="input-box">
                    <input asp-for="Password" placeholder="Password">
                    <i class='bx bx-lock-alt'></i>
                </div>
                <div class="input-box">
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password">
                    <i class='bx bx-lock-alt'></i>
                </div>
                <div class="input-box">
                    <input asp-for="FirstName" placeholder="Enter First Name">
                    <i class='bx bx-lock-alt'></i>
                </div>
                <div class="input-box">
                    <input asp-for="LastName" placeholder="Enter Last Name">
                    <i class='bx bx-lock-alt'></i>
                </div>
                <div class="input-box">
                    <input asp-for="Email" placeholder="Email Address">
                    <i class='bx bx-lock-alt'></i>
                </div>
                <div class="input-box">
                    <input asp-for="Phone" placeholder="Phone Number">
                    <i class='bx bx-lock-alt'></i>
                </div>

                <button type="submit" class="btn" value="Submit">Sign Up</button>
            </form>
            <div class="new-acc">
                <p>
                    Already a member? <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
            </div>
        </div>
    </div>
    <footer class="footer text-center">
        <div class="container">
            <div class="row">
                <!-- Footer Location-->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">Location</h4>
                    <p class="lead mb-0">
                        2215 John Daniel Drive
                        <br />
                        Clark, MO 65243
                    </p>
                </div>
                <!-- Footer Social Icons-->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">ADDICURE</h4>
                    <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="fab fa-fw fa-facebook-f"></i></a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="fab fa-fw fa-twitter"></i></a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="fab fa-fw fa-linkedin-in"></i></a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#!"><i class="fab fa-fw fa-dribbble"></i></a>
                </div>
                <!-- Footer About Text-->
                <div class="col-lg-4">
                    <h4 class="text-uppercase mb-4">About the Clinic</h4>
                    <p class="lead mb-0">
                        ADDICURE is a clinic that helps you with your specific medical needs. We provide cutting-edge services for medications and facilities for your wellness.

                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
    <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
    <!-- * *                               SB Forms JS                               * *-->
    <!-- * * Activate your form at https://startbootstrap.com/solution/contact-forms * *-->
    <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
</body>
</html>