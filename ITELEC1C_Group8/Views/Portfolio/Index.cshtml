                                                        <div class="divider-custom">
                                                            <div class="divider-custom-line"></div>
                                                            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                                            <div class="divider-custom-line"></div>
                                                        </div>
                                                        <!-- Portfolio Modal - Image-->
                                                        <img class="img-fluid rounded mb-5 equal-image" src="/@doctor.imagePath" alt="Doctor Image" />
                                                        <!-- Additional Text Fields -->
                                                        <p class="mb-2"><strong>Username:</strong> @doctor.UserName</p>
                                                        <p class="mb-2"><strong>First Name:</strong> @doctor.FirstName</p>
                                                        <p class="mb-2"><strong>Last Name:</strong> @doctor.LastName</p>
                                                        <p class="mb-2"><strong>Email:</strong> @doctor.Email</p>
                                                        <p class="mb-2"><strong>Phone Number:</strong> @doctor.PhoneNumber</p>
                                                        <p class="mb-2"><strong>Branch:</strong> @doctor.Branch</p>
                                                        <!-- Add more properties as needed -->
                                                        <button class="btn btn-primary" data-bs-dismiss="modal">
                                                            <i class="fas fa-xmark fa-fw"></i>
                                                            Close Window
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            index++;
                        }
