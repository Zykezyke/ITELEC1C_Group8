@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Addicure</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/logo.png" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #E5F0FF;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }
        .c-item{
            height: 480px;
        }
        .c-img{
            height: 100%;
            object-fit:cover;
            filter: brightness(0.6);
        }
        
    </style>
</head>

<body id="page-top">

    <!-- Bootstrap Carousel -->
 <br />
 <br />
 <br />

    <div id="carouselExampleIndicators" class="carousel slide">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active c-item">
                <img src="assets/img/home/hos.jpg" class="d-block w-100 c-img" alt="Slide 1">
                <div class="carousel-caption top-0 mt-4 d-none d-md-block">
                    <br />
                    <p class="mt-5 fs-3">Welcome to Addicure Medical Care!</p>
                    <h2 class="display-4 fw-bolder text-capitalize">Your Journey to Wellness Begins Here: Book Your Appointment Today!</h2>
                </div>
            </div>
            <div class="carousel-item c-item">
                <img src="assets/img/home/hospi.jpg" class="d-block w-100 c-img" alt="Slide 2">
               
            </div>
            <div class="carousel-item c-item">
                <img src="assets/img/home/ust.png" class="d-block w-100 c-img" alt="Slide 3">
              
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Masthead-->
    <header class="masthead">
        <div class="container d-flex align-items-center flex-column">
            <!-- Masthead Avatar Image-->
            <img class="masthead-avatar mb-5" src="assets/img/logo.png" alt="..." />
            <!-- Masthead Heading-->
   
            <br>
            <p class="fs-3">
                Welcome to our clinic, where care and compassion come together to provide you with the best possible medical experience. Whether you're seeking routine check-ups, specialized treatments, or expert advice, we are committed to delivering personalized care that puts you on the path to a healthier, happier life.
                <br><br>
                Feel free to explore our services and book an appointment to embark on a journey towards optimal health. Your wellness is our priority, and we're honored to be a part of your healthcare journey.
            </p>

            <!-- About Section-->
            <section class="page-section" style="background-color:#E5F0FF;" id="about">
                <div class="container">
                    <!-- About Section Heading-->
                    <h2 class="page-section-heading text-center text-uppercase mt-3"><br>About Addicure</h2>
                    <!-- Icon Divider-->
                    <div class="divider-custom divider-light">
                        <div class="divider-custom-line"></div>
                        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                        <div class="divider-custom-line"></div>
                    </div>
                    <!-- About Section Content-->
                    <div class="row" style="text-align: center;">
                        <div class="col-lg-4 ms-auto text-md-center"><img class="img-test" src="assets/img/about/team.png" alt="..." /></div>
                        <div class="col-lg-4 me-auto text-md-center"><img class="img-test" src="assets/img/about/expert.png" alt="..." /></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 ms-auto text-xl-center">
                            <p class="lead">
                                <h2>Our <br> Commitment</h2>
                            </p>
                        </div>
                        <div class="col-lg-4 me-auto text-xl-center">
                            <p class="lead">
                                <h2>Expert Care with a Personal Touch</h2>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 ms-auto text-md-center">
                            <p class="lead">At the heart of our clinic is a commitment to putting patients first. We understand that visiting a medical facility can be a daunting experience, and that's why we have designed our space to radiate comfort and positivity. From our cozy waiting area to our friendly and caring staff, every element of Addicure has been carefully crafted to ensure your visit is as stress-free as possible.</p>
                        </div>
                        <div class="col-lg-4 me-auto text-md-center">
                            <p class="lead">Led by a team of experienced and compassionate healthcare professionals, Addicure offers a comprehensive range of medical services to address your individual needs. Whether you're seeking routine check-ups, specialized treatments, or health advice, our dedicated staff is here to listen, understand, and guide you through every step of your healthcare journey.</p>
                        </div>
                    </div>

                    <div class="row" style="text-align: center;">
                        <div class="col-lg-4 ms-auto text-md-center"><img class="img-test" src="assets/img/about/collab.png" alt="..." /></div>
                        <div class="col-lg-4 me-auto text-md-center"><img class="img-test" src="assets/img/about/inclusive.png" alt="..." /></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 ms-auto text-xl-center">
                            <p class="lead">
                                <h2>Community and Collaboration</h2>
                            </p>
                        </div>
                        <div class="col-lg-4 me-auto text-xl-center">
                            <p class="lead">
                                <h2>A Welcoming Space for All</h2>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4 ms-auto text-md-center">
                            <p class="lead">We believe that healthcare is not just about treating ailments; it's about building a healthy community. That's why we encourage open communication and collaboration between patients and our medical experts. We take the time to listen to your concerns, answer your questions, and involve you in decisions about your health.</p>
                        </div>
                        <div class="col-lg-4 me-auto text-md-center">
                            <p class="lead">Diversity and inclusivity are at the core of our values. Our clinic is a safe space where everyone is treated with respect and dignity, regardless of their background, identity, or medical needs. We're dedicated to creating an environment where you can feel comfortable discussing your health, no matter your age, gender, or cultural background.</p>
                        </div>
                    </div>
                    <div class="row" style="text-align: center;">
                        <div class="col-md-4 mx-auto" style="display: inline-block;"><img class="img-test" src="assets/img/about/wellness.png" alt="..." /></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 mx-auto text-xl-center">
                            <p class="lead">
                                <h2>Join Us in Your Journey to Wellness</h2>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4 mx-auto text-md-center">
                            <p class="lead">Whether you're a long-time patient or new to our clinic, we are excited to be a part of your journey to better health and wellness. Addicure is not just a medical facility; it's a place where relationships are built, smiles are shared, and positive health outcomes are achieved.</p>
                        </div>
                    </div>

                    <!-- About Section Button-->
                    <div class="text-center mt-4">
                        <a class="btn btn-xl btn-outline-light" style="background-color:#101F90;" asp-area="" asp-controller="Appointment" asp-action="ShowApp">
                            <i class="fas fa-download me-2"></i>
                            Book an appointment now!
                        </a>
                    </div>
                </div>
            </section>

         
        </div>
    </header>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
    <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
    <!-- * *                               SB Forms JS                               * *-->
    <!-- * * Activate your form at https://startbootstrap.com/solution/contact-forms * *-->
    <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
</body>

</html>